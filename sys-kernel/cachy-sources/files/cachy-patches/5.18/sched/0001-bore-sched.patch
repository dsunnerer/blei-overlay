+++ b/kernel/sched/core.c
@@ -9524,6 +9524,10 @@ void __init sched_init(void)
 	BUG_ON(&dl_sched_class != &stop_sched_class + 1);
 #endif
 
+#ifdef CONFIG_SCHED_BORE
+	printk(KERN_INFO "BORE (Burst-Oriented Response Enhancer) CPU Scheduler modification 1.3.30.1 by Masahito Suzuki");
+#endif // CONFIG_SCHED_BORE
